.table {
  height: 110rpx;
  border: 3rpx solid darkgray;
  display: flex;
  width: 100%;
  justify-content: center;
  align-items: center;
}
.tr {
  height: 110rpx;
  border-right: 3rpx solid darkgray;
  width: 33%;
  justify-content: center;
  display: flex;
  align-items: center;
}
.arrow1{
    width: 30rpx;
    height: 30rpx;
    border-top: 5rpx solid #999;
    border-right: 5rpx solid #999;
    position: absolute;
    right: 290rpx;
    transform: rotate(135deg);
}
.arrow2{
    width: 30rpx;
    height: 30rpx;
    border-top: 5rpx solid #999;
    border-right: 5rpx solid #999;
    position: absolute;
    right: 20rpx;
    transform: rotate(45deg);
    margin-top:5rpx;
}
.arrow3{
    width: 30rpx;
    height: 30rpx;
    border-top: 5rpx solid #999;
    border-right: 5rpx solid #999;
    position: absolute;
    right: 540rpx;
    transform: rotate(135deg);
}
.selectBox1 {
    background-color: #eee;
    width: 32%;
    padding: 0 10rpx;
    position: absolute;
    top: 260rpx;
    z-index: 1;
    overflow: hidden;
    animation: myFirst 0.5s;
}
.selectBox2 {
    background-color: #eee;
    width: 32%;
    margin-left: 33%;
    padding: 0 10rpx;
    position: absolute;
    top: 260rpx;
    z-index: 1;
    overflow: hidden;
    animation: mySecond 0.5s;
}
.selectOne {
    height: 80rpx;
    line-height: 80rpx;
    border-top: 1px solid #ccc;
}
@keyframes myFirst {
    from {
        height: 0rpx;
    }
    to {
        height: 400rpx;
    }
}
@keyframes mySecond {
    from {
        height: 0rpx;
    }
    to {
        height: 160rpx;
    }
}
.myDoctor{
    font-size: 50rpx;
    width: 100%;
    height: 100rpx;
    position:absolute;
    bottom:0rpx;
    text-align: center;
    border: 2rpx solid #999;
    padding-top: 30rpx;
}
