.class1 {
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border: 1px solid #ccc;
  padding: 0 10rpx;
  background-color: #fff;
  position: relative;
}
.selectBox {
  background-color: #eee;
  width: 100%;
  padding: 0 10rpxs;
  position: absolute;
  top: 210rpx;
  z-index: 1;
  overflow: hidden;
  animation: myfirst 0.5s;
}
.selectOne {
  height: 60rpx;
  line-height: 60rpx;
  border-top: 1px solid #ccc;
}
@keyframes myfirst {
  from {
    height: 0rpx;
  }
  to {
    height: 240rpx;
  }
}
.class2 {
  position: relative;
  display: flex;
  padding: 15px;
  align-items: center;
  border-bottom: 1px solid #f5f5f5;
  border-top: 1px solid #f5f5f5;
  background-color: white;
  padding-top: 20px;
}
.arrow1 {
  width: 20rpx;
  height: 20rpx;
  border-top: 4rpx solid #999;
  border-right: 4rpx solid #999;
  position: absolute;
  right: 20rpx;
  transform: rotate(135deg);
}
.arrow2 {
  width: 30rpx;
  height: 30rpx;
  border-top: 5rpx solid #999;
  border-right: 5rpx solid #999;
  position: absolute;
  right: 20rpx;
  transform: rotate(45deg);
  margin-top: 5rpx;
}
.class3 {
  display: inline-block;
  font-size: 45rpx;
  color: black;
}
